//type compute
#version 450

layout (local_size_x = 8, local_size_y = 8, local_size_z = 1) in;

layout (set = 0, binding = 0, rgba32f) writeonly uniform image2D u_ImageBuffer;

void main() {
	ivec2 id = ivec2(gl_GlobalInvocationID.xy);
	if (id.x < 800 && id.y < 400) {
		imageStore(u_ImageBuffer, id, vec4(0.5f, 0.5f, 0.0f, 1.0f));
	}
}
